<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
	<package name="ajax" namespace="/" extends="json-default">
		<action name="addFavourate" class="com.courseratingsystem.web.action.UserAction" method="addFavourate">
			<result type="json" name="success"></result>
		</action>
	</package>
   
    <package name="default" namespace="/" extends="struts-default">
		
		<!-- 声明拦截器 -->
    	<interceptors>
    		<interceptor name="commentInterceptor" class="com.courseratingsystem.web.interceptor.CommentInterceptor">
    		</interceptor>
    		<interceptor-stack name="realCommentInterceptor">
    			<interceptor-ref name="commentInterceptor"></interceptor-ref>
    			<interceptor-ref name="defaultStack"></interceptor-ref>
    		</interceptor-stack>
    	</interceptors>
    
	    <!-- <global-results><result name="fail">fail.jsp</result></global-results> -->
	    
	    <!--  
	    <action name="LoginAction" class="com.chinasoft.app.action.LoginAction" method="login">    
	    <result name="success" type="redirectAction">book_search</result>
	    </action>
	    -->
	    <action name="login" class="com.courseratingsystem.web.action.LoginAction">
	    	<result name="success" type="redirectAction">course_findAll</result>
	    	<result name="fail">/login.jsp</result>
	    </action>
	    <action name="register" class="com.courseratingsystem.web.action.RegisterAction">
	    	<result name="success" type="redirect">/index.jsp</result>
	    	<result name="fail">/register.jsp</result>
	    </action>
	    <action name="changePassword" class="com.courseratingsystem.web.action.ChangePasswordAction">
	    	<result name="success" type="redirect">/index.jsp</result>
	    	<result name="fail">/changePass.jsp</result>
	    </action>
	    <action name="user_*" class="com.courseratingsystem.web.action.UserAction" method="{1}">
	    	<result name="success">/profile.jsp</result>
	    	<result name="fail">/modifyProfile.jsp</result>
	    </action>
	    
	    <!-- 
	    <action name="course_search" class="com.courseratingsystem.web.action.CourseAction" method="findByName">
	    	<result name="SUCCESS">courseTest.jsp</result>
	    	<result name="fail">error.jsp</result>
	    </action>
	     -->
	    <action name="course_*" class="com.courseratingsystem.web.action.CourseAction" method="{1}">
	    	<result name="success">index.jsp</result>
	    	<result name="get_to_course_page">/course.jsp</result>
	    	<result name="fail">error.jsp</result>
	    </action>
	    <action name="comment_*" class="com.courseratingsystem.web.action.CommentAction" method="{1}">
	    	<result name="get_to_comment_page">/comment.jsp</result>
	    	<result name="comment_success">/course.jsp</result>
	    	<result name="fail">login.jsp</result>
	    	<interceptor-ref name="realCommentInterceptor"></interceptor-ref>
	    </action>
		<action name="comment_findByTeacher" class="com.courseratingsystem.web.action.CommentAction" method="findByTeacher">
			<result name="success">xingtest3.jsp</result>
			<result name="fail">error.jsp</result>
		</action>	
		<action name="addcomment" class="com.courseratingsystem.web.action.CommentAction" method="addComment">
			<result name="success">add.jsp</result>
			<result name="fail">error.jsp</result>
		</action>
		
		<action name="Teacher_*" class="com.courseratingsystem.web.action.TeacherAction" method="{1}">
			<result name="success">xingtest2.jsp</result>
			<result name="fail">error.jsp</result>
		</action>
    </package>


</struts>
