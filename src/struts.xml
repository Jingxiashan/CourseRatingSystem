	    </action>
	    	
	    <action name="Bookadd" class="com.chinasoft.app.hibernatejboss.Bookadd" method="addBook">    
	    	<result name="success">success.jsp</result>
	    </action>
	    
	    <action name="book_*" class="com.chinasoft.app.action.BookAction" method ="{1}">
		    <result name="success">book.jsp</result>
		    <result name="book_search" type="redirectAction">book_search</result>
		    <result name="findById">update.jsp</result>
	    </action>

    
    </package>


